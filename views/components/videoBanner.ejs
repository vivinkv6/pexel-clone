<div class="banner-container">
 

    <video  class="banner-img" autoplay muted loop style="width: 100%;">
        <source src=<%=video %>>
    </video>
  
   
    <div class="banner-content">
      <p><%= title%></p>
      <form action="/videos/search" method="get">
      <div class="input-group mb-3">
        <span class="input-group-text bi bi-file-play-fill dropdown">
  
        </span>
        
        <input
          type="text"
          name="search"
          class="form-control  bi bi-search"
          placeholder="Search for free videos"
          aria-label="Amount (to the nearest dollar)"
        />
  
      </div>
    </form>
  
      <p style="font-size: 10px;">
        <span style="font-size: 10px; color: rgb(188, 188, 188)">Trending:</span>
        Nature, dark, motivational, halloween, flowers
        <i
          class="bi bi-three-dots dots"
        ></i>
      </p>
    </div>
    <p class="editor-details"><span style="font-weight: 700; font-size: 10px; color: rgba(188, 188, 188, 0.51)">Video by</span> Kammeran Gonzalez</p>
  </div>
  
  